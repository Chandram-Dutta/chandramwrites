---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Blogs";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<style>
  .post-list {
    margin-top: 24px;
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .post-card {
    height: 25%;
    width: 100%;
  }
  .post-card > div {
    margin: 12px;
    padding: 20px;
    color: #000000;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
  .post-card:hover > div {
    background-color: #000000;
    color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.9);
  }
  h3 {
    margin-bottom: 0px;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <div class="post-list">
    {
      allPosts.map((post) => (
        <a class="post-card" href={post.url}>
          <div>
            <h3>{post.frontmatter.title}</h3>
            by {post.frontmatter.author} published on {post.frontmatter.pubDate}
          </div>
        </a>
      ))
    }
  </div>
</BaseLayout>
